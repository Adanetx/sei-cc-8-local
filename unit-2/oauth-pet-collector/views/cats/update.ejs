<%- include('../partials/header'); %>
<h2>Update Cat</h2>
<div class="row">
    <form class="col s12" action="/cats/<%= idx %>?_method=PUT" method="POST">
      <div class="row">
        <div class="input-field col s12">
          <input id="catName" value="<%= cat.name %>" name="name" type="text">
          <label for="catName">Cat's Name</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="catBreed" value="<%= cat.breed %>" name="breed" type="text">
          <label for="catBreed">Cat's Breed</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="catAge" value="<%= cat.age %>" name="age" type="text">
          <label for="catAge">Cat's Age</label>
        </div>
      </div>
      <button class="btn waves-effect waves-light" type="submit" name="action">Update Cat
        <i class="material-icons right">send</i>
      </button>
      <a class="btn waves-effect red waves-light" href="/cats/mycats">Cancel
      </a>
    </form>
  </div>
  <div class="row">
      <% cat.comments.forEach(function(c, commidx) { %>
        <div class="commentfield input-field col s6">
            <input id="catAge" disabled value="<%= c.comments %>" name="age" type="text">
            <form action="/cats/<%= user._id %>/<%= cat._id %>/<%= idx %>/<%= commidx %>?_method=DELETE" method="POST">
            <button class="btn red waves-effect waves-light" type="submit" name="action">X</button>
            </form>
        </div>
      <% }) %>
  </div>
<%- include('../partials/footer'); %>