<%- include('../partials/header') %>

<div class="row">
    <div class="col s6 m6">
      <div class="card grey darken-3">
        <div class="card-content white-text">
          <span class="card-title"><%= cat.name %></span>
          <dl>
            <dt>Breed:</dt>
            <dd><%= cat.breed %></dd><br>
            <dt>Age:</dt>
            <dd><%= cat.age %> years old</dd><br>
            <dt>Owner:</dt>
            <dd><%= cat.owner %></dd><br>
            <dt>Comments:</dt>
            <% cat.comments.forEach((c) => { %>
                <dd><%= c.comments %> - <%= c.commentBy %> </dd>
            <% }) %>
            
            <div class="row">
                <div class="input-field col s12">
                  <form action="/cats/<%= ownerid %>/<%= cat._id %>/comment" method="POST">
                    <textarea id="comment" class="materialize-textarea" name="comments" data-length="120"></textarea>
                    <label for="comment">Leave a comment</label><br><br>
                    <button class="btn green waves-effect waves-light" type="submit">Add Comment</button>
                  </form>
                </div>
              </div>
          </dl>
        </div>
      </div>
    </div>
  </div>

<%- include('../partials/footer') %>