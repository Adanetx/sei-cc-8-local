<%- include('../paritals/header'); %>
<h1>My Dogs Page</h1>

<a href="/dogs/new" class="btn-floating btn-large waves-effect waves-light green"><i class="material-icons">add</i></a>
<br><br>
<% dogs.forEach((dog) => { %>
    <div class="row">
        <div class="col s6 m3">
          <div class="card grey darken-3">
            <div class="card-content white-text">
              <span class="card-title"><%= dog.name %></span>
              <dl>
                <dt>Breed:</dt>
                <dd><%= dog.breed %></dd><br>
                <dt>Age:</dt>
                <dd><%= dog.age %> years old</dd><br>
              </dl>
            </div>
            <div class="card-action">
                <a class="yellow-text" href="#">Edit</a>
                <a class="red-text right" href="#">Delete</a>
            </div>
          </div>
        </div>
      </div>
<% }) %>
<%- include('../paritals/footer'); %>